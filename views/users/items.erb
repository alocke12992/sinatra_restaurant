
<div class="row" style="margin: auto; padding:
auto;
background-color:rgba(0, 0, 0, 0.4);
text-align: center;
vertical-align: middle;
min-height: 100%;">
<% @items.each do |item| %>
<div class="col-sm-4 custom" style="margin-top: 1%;">
  <div class="card ol d-flex custom" style="border-radius: 20%; width: 300px; height= 300px; max-width: 300px; max-height: 300px; margin: auto;">
    <div class="card-body" style="
    background-color: lightgrey;
    width: 70%; border-radius: 10%;
    padding: 0;
    margin: 50px auto 0px auto;">
    <img class="card-img-top" src="<%= item.image %>" alt="Card image cap" style="
    max-width: 70%;
    text-align: center;
    margin-left: auto;
    margin-right: auto;
    display: block;">
    <h4 class="card-title">
      <%= item.title %>
    </h4>
    <p class="card-text">
      <%= item.description %>
    </p>
  </div>
  <a class="btn" href="/users/items/<%= item.id %>/edit" style="
    width: 60px;
    font-size: 8px;
    background-color:
    rgba(0, 0, 255, 0.3);
    margin: 2px;
    max-height: 20px; text-align:
    center;
    vertical-align: middle;
    margin-top: 0;
    margin-left: auto;
    margin-right: auto;
    display: block">Edit</a>
    <form action="/users/items/<%= item.id %>" method="POST" style="            margin-left: auto;
      margin-right: auto;">
      <input type="hidden" name="_method" value="DELETE" />
      <button class="btn red" style="
      width: 60px;
      font-size: 8px;
      background-color:
      rgba(255, 0, 0, 0.3); float:
      left; margin: 2px;
      max-height: 20px;
      text-align: center;
      vertical-align: middle;
      margin-top: 0;
      margin-left: auto;
      margin-right: auto;">Delete</button>
    </form>
  </div>
</div>
<% end %>
</div>
