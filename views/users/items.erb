
<div class="container-fluid">
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-sm-6">
        <div class="card ol d-flex justify-content-center" style="width: 400px; height= 400px;">
          <div class="card-body">
            <img class="card-img-top" src="<%= item.image %>" alt="Card image cap">
            <h4 class="card-title">
              <%= item.title %>
            </h4>
            <p class="card-text">
              <%= item.description %>
            </p>
          </div>
          <a class="btn" href="/users/items/<%= item.id %>/edit" style="width: 60px; font-size: 8px; background-color: rgba(0, 0, 255, 0.3); float: left; margin: 2px; max-height 30px; text-align: center;
          vertical-align: middle;">Edit</a>
          <form action="/users/items/<%= item.id %>" method="POST">
            <input type="hidden" name="_method" value="DELETE" />
            <button class="btn red" style="width: 60px; font-size: 8px; background-color: rgba(255, 0, 0, 0.3); float: left; margin: 2px; max-height 30px; text-align: center;
            vertical-align: middle;">Delete</button>
          </form>
        </div>
      </div>
      <% end %>
  </div>
</div>