<h1 class="center" style="color: black;"</h1>
  <div class="card" style="width: 80%;">
    <% @allItems.each do |item| %>
    <div class="col-sm-" style="margin-top: 1%;">
      <div class="card ol d-flex" style="border-radius: 20%; width: 600px; height: 600px; max-width: 600px; max-height: 600px; margin: auto;">
        <div class="card-body" style="
        background-color: lightgrey;
        max-height: 60%;
        min-height: 60%;
        width: 70%; border-radius: 10%;
        padding: 0;
        margin: 50px auto 0px auto;">
        <img class="card-img-top" src="<%= item.image %>" alt="Card image cap" style="
        max-width: 60%;
        max-height: 60%;
        min-height: 60%;
        text-align: center;
        margin-left: auto;
        margin-right: auto;
        display: block;">
      </div>
      <div class="card-body">
        <h4 class="card-title">
          <%= item.title %>
        </h4>
        <p class="card-text" style="font-size: 12px;">
          <%= item.description %>
        </p>
      </div>
    </div>
    <% end %>
  </div>
